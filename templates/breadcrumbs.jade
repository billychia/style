mixin breadcrumbItem(title, link)
    li
        if link
            a(href=link)= title
        else
            = title

.breadcrumbs
    button.toggler-sec
        span.open: img(src="/images/subnav-arrow-left.png")
        span.close: img(src="/images/subnav-arrow-right.png")
    ul.links
        each crumb in breadcrumbs || []
            +breadcrumbItem(crumb.title, crumb.link)
